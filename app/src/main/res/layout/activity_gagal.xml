<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background= "@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/jawabanbenar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Jawaban benar : "
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_marginBottom="250dp"
        android:layout_marginTop="190dp"
        android:textColor="@android:color/black"
       />

    <TextView
        android:id="@+id/jawabansalah"
        android:layout_alignTop="@+id/jawabanbenar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Jawaban salah : "
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_marginBottom="200dp"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/jawabanwaktuhabis"
        android:layout_alignTop="@+id/jawabansalah"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Waktu habis : "
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_marginBottom="160dp"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/black"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Score kamu"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginBottom="400dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/gagal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginBottom="350dp"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

    <Button
        android:id="@+id/home"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:background="@android:color/holo_red_light"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="Kembali ke Menu Utama"
        />
</RelativeLayout>